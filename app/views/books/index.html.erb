<h1>Books</h1>


  <table class ="table-title">
    <tr>
      <th class="Title">Title</th>
      <th class="Body">Body</th>
      <th colspan="3"></th>
    </tr>
  </table>
  <% @books.each do |book| %>

  <table class ="table-content">
    <tr>
      <td  class="Title"><%= book.title %></td>

      <td class="Body"><%= book.body %></td>

      <td>
        <%= link_to "Show", "/books/#{book.id}" ,class:"link"%>
      </td>
      <td>
    <%= link_to "Edit", "/books/#{book.id}/edit" ,class:"link"%>
      </td>
      <td>
      <%= link_to "Destroy", "/books/#{book.id}" , method: :delete, "data-confirm" => "本当に削除しますか？",class:"link" %>
      </td>
    </tr>

  </table>

<% end %>

<div class="newbook">
  <h1>New Books</h1>
<!-- form_with部分 -->
  <% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  <%= form_with model: Book.new do |f| %>
  <h4 class="newbook-table">Title</h4>
  <%= f.text_field :title %>

  <h4 class="newbook-table">Body</h4>
  <%= f.text_area :body %>

 <h5> <%= f.submit 'Create Book' %></h5>
  <% end %>
 </div>